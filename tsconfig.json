{
  "compilerOptions": {
    "target": "esnext",
    "jsx": "react-jsx",
    "module": "esnext",
    "moduleResolution": "bundler",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": false,
    "allowSyntheticDefaultImports": true,
    "preserveSymlinks": true,
    "types": ["vite/client", "electron"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/renderer/*"],
      "@main/*": ["src/main/*"],
      "@preload/*": ["src/preload/*"],
      "@assets/*": ["src/renderer/assets/*"]
    }
  },
  "include": [
    "src/global.d.ts",
    "src/**/*.ts",
    "src/**/*.tsx"
  ]
}