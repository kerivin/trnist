{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "moduleResolution": "node",
    "outDir": "dist",
    "jsx": "react-jsx",
    "lib": ["ESNext", "DOM"],
    "allowJs": false,
    "strict": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "~shared/*": ["src/shared/*"],
      "~components/*": ["src/components/*"]
    }
  },
  "include": [
    "src/global.d.ts",
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
